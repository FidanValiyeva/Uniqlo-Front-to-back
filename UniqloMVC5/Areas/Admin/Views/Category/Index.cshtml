@using UniqloMVC5.Models
@model List<CategoryItemVM>

@{
    ViewData["Title"] = "Index";
    int tableNo = 0;
}


<table class="table">
    <thead class="thead-light">
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Image</th>
            <th colspan="2">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@(tableNo++)</td>
                <td><img width="50px" src="~/imgs/categories/@item.Url" /></td>
                <td>@item.Name</td>
                <td><a class="btn btn-success" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
            </tr>

        }
        
    </tbody>
</table>