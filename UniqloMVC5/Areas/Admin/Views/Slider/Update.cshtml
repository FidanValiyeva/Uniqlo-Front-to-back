@using UniqloMVC5.Models
@model SliderUpdateVM
@{
	ViewData["Title"] = "Update";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Create Slider</h6>
        <a asp-action="Index" asp-controller="Slider" class="btn btn-outline-primary ml-auto">Return list</a>
    </div>
    <div class="card-body">


        <form method="post" enctype="multipart/form-data">

            <div class="form-group">
                <label asp-for="Title"></label>

                <input asp-for="Title" class="form-control">
                <span asp-validation-for="Title" class="text-small text- danger"> </span>
            </div>
            <div class="form-group">
                <label asp-for="Subtitle"></label>

                <input asp-for="Subtitle" class="form-control">
                <span asp-validation-for="Subtitle" class="text-small text- danger"> </span>
            </div>
            <div class="form-group">
                <label asp-for="Link"></label>

                <input asp-for="Link" class="form-control">
                <span asp-validation-for="Link" class="text-small text- danger"> </span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>

                <img asp-append-version="true" style="width:160px" src="~/imgs/sliders/@Model.ImageUrl">
                <input asp-for="ImageUrl" type="hidden" />
                <span asp-validation-for="ImageUrl" class="text-small text- danger"> </span>
            </div>


            <button type="submit" class="btn btn-primary">Submit</button>

        </form>

    </div>
</div>